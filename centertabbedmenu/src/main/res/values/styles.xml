<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Login Activity Tablayout  -->
    <style name="LoginActivityTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextAppearance">@style/LoginActivityTabLayoutTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>


    <style name="LoginActivityTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>